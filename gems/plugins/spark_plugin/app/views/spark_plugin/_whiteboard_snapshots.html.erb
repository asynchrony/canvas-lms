<% if !whiteboards || whiteboards.length == 0 %>
    No whiteboards found.
<% else %>
  <style>
    .whiteboard-wrapper {
      float: left;
      position: relative;
      width: 250px;
      top: 0px;
      margin: 10px 10px 10px 10px;
    }
    .whiteboard {
      width: 250px;
      border: 2px solid #ccc;
      border-radius: 10px;
      position: relative;
    }
    .whiteboard.selected {
      border: 2px solid #00AC18;
    }
    .whiteboard-label {
      position: absolute;
      left: 5px;
      right: 5px;
      text-align: center;
      bottom: 5%;
      visibility: hidden;
      opacity: 0;
      background: #fff;
    }
    .whiteboard-wrapper:hover .whiteboard-label {
      visibility: visible;
      opacity: 1;
    }
  </style>
  <div>
    <% whiteboards.each do |whiteboard| %>
      <div class="whiteboard-wrapper">
        <img id="<%= whiteboard['url'] %>" class="whiteboard" src="data:image/png;base64,<%= whiteboard['image'] %>" />
        <span class="whiteboard-label"><%= Time.at(whiteboard['updated_at'] / 1000).getlocal(@current_user.time_zone.utc_offset).strftime('%D %r') %></span>
      </div>
    <% end %>
  </div>
  <br clear="all"/>
<% end %>
