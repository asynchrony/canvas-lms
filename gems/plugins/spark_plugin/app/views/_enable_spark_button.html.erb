<% if enabled? %>
  <%= form_tag({ controller: "spark_plugin", action: "enable_spark", id: @context.id,  method: "post" }, style: "display: inline-block; margin: 0px") do %>
    <%= hidden_field :course, :course_code, value: @context.course_code %>
    <%= submit_tag "Enable Spark", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <p>Disable Spark</p>
<% end %>
